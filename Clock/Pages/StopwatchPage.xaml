<Page x:Class="Clock.Pages.StopwatchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Clock.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StopwatchPage">

    <Grid>
        <Label x:Name="stopwatchLabel" Grid.ColumnSpan="1" Grid.Row="0" Content="00:00:00:000" FontSize="50" Margin="30,75,0,0" VerticalAlignment="Top" Height="90"/>
        <Button Content="Start" x:Name="startClickButton" HorizontalAlignment="Left" Click="startClick" Margin="230,200,0,0" FontWeight="SemiBold" BorderThickness="2" BorderBrush="Black" Background="#399494" VerticalAlignment="Top" Width="75"/>
        <Button Content="Reset" HorizontalAlignment="Left" Click="resetClick" Margin="140,200,0,0"  FontWeight="SemiBold" BorderThickness="2" BorderBrush="Black" Background="#399494" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Page>
